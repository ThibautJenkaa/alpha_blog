<h1>Liste des articles</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td>
                <%= link_to 'Show', article_path(article) %>
                <%= link_to 'Edit', edit_article_path(article) %>
                <%= link_to 'Delete', article_path(article), method: :delete %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

